<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvkids"
        android:layout_width="232dp"
        android:layout_height="50dp"
        android:background="#37FF00"
        android:text="Press image To Choose Games" />
    <ImageButton
        android:id="@+id/IB_enter"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@drawable/games"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.747"
        />

    <TextView
        android:id="@+id/tvkidsmusic"
        android:layout_width="232dp"
        android:layout_height="50dp"
        android:background="#B10E0E"
        android:text="Press image To Choose Song" />

    <ImageButton
        android:id="@+id/IB_music"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@drawable/kidsm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.747"
        />
</LinearLayout>