<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".choose_options">




    <TextView
        android:id="@+id/textView2"
        android:layout_width="378dp"
        android:layout_height="100dp"
        android:background="#D80000"
        android:backgroundTint="#B10E0E"
        android:gravity="center"
        android:text="Please Choose An Option:"
        android:textColor="#F8F7F7"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/butL"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/butL"
        android:layout_width="232dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/teal_200"
        android:text="Letters"
        android:textColor="#050505"
        android:textIsSelectable="true"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/butN"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.5" />

    <Button android:layout_height="50dp"
        android:layout_width="232dp"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintTop_toBottomOf="@+id/butL"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/butC"
        android:textSize="24sp"
        android:textIsSelectable="true"
        android:textColor="#120202"
        android:text="Numbers"
        android:backgroundTint="#37FF00"
        android:id="@+id/butN"/>

    <Button android:layout_height="50dp"
        android:layout_width="232dp"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintTop_toBottomOf="@+id/butN"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="24sp"
        android:textIsSelectable="true"
        android:textColor="#050404"
        android:text="Colors"
        android:backgroundTint="#FFC107"
        android:id="@+id/butC"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button android:layout_height="50dp"
        android:layout_width="232dp"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintTop_toBottomOf="@+id/butN"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="24sp"
        android:textIsSelectable="true"
        android:textColor="#050404"
        android:text="Online games"
        android:backgroundTint="#FFC107"
        android:id="@+id/butO"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageButton
        android:id="@+id/imgb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.005"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.005"
        app:srcCompat="@android:drawable/ic_menu_revert"
        tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

</LinearLayout>